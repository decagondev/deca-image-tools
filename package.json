{
  "name": "deca-image-tools",
  "version": "1.0.1",
  "description": "A lightweight TypeScript library for image processing operations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "image-processing",
    "edge-detection",
    "colorize",
    "gaussian-blur",
    "image-sharpening",
    "brightness-adjustment",
    "color-inversion",
    "typescript",
    "canvas",
    "sobel"
  ],
  "author": "Tom Tarpey (decagondev)",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/decagondev/deca-image-tools.git"
  },
  "bugs": {
    "url": "https://github.com/decagondev/deca-image-tools/issues"
  },
  "homepage": "https://github.com/decagondev/deca-image-tools#readme",
  "dependencies": {
    "canvas": "^2.11.2"
  }
}
